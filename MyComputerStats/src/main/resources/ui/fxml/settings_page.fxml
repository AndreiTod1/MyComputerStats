            fx:controller="org.example.ui.settings.SettingsPageController"
            fitToWidth="true"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            styleClass="scroll-pane">

    <VBox styleClass="info-card" spacing="20" maxWidth="800" alignment="TOP_LEFT">
        <padding>
            <Insets top="25" right="25" bottom="25" left="25"/>
        </padding>

        <Label text="âš™ï¸ SETTINGS" styleClass="section-header"/>
        <Separator styleClass="separator"/>

